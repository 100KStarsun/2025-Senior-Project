<?xml version="1.0" encoding="utf-8"?>
<!--xml file for allowing user interaction for adding listings-->
<!--creates title and description fields with respective input hints-->
<!--creates save button to complete listing-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_listing_title"
        android:hint="Title"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_listing_description"
        android:hint="Description"
        android:inputType="textMultiLine"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_listing_price"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:importantForAccessibility="yes" />
    <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/input_listing_tag1"
       android:hint="Tag #1"/>
    <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/input_listing_tag2"
       android:hint="Tag #2"/>
    <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/input_listing_tag3"
       android:hint="Tag #3"/>
    <Button
        android:id="@+id/button_select_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save_listing"
        android:text="Save"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
</LinearLayout>